<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelBudget</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelBudget.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

            <div class="container-fluid">
                <a href="#" class="navbar-brand">                 
                <img src="/images/winding-road.jpg" class="logo-image"/>
                <span class="logo-title">Travel Budget</span>                  
                </a>
                <style>

                .logo-image 
                {
                        border-radius: 8px;
                        max-width: 100px; 
                        vertical-align: middle;
                }

                .logo-title
                {
                        text-align: center;
                        font-size: 40px;
                        vertical-align: middle;                       
                }

                </style>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin-right: 10px;">
                            <a><button type="button" class="btn btn-success" asp-area="" asp-controller="TravelBudget" asp-action="Index">Create New Travel</button></a>
                        </li>

                        <li class="nav-item" style="margin-right: 10px;">
                            <a><button type="button" class="btn btn-danger" asp-area="" asp-controller="TravelBudget" asp-action="Index">My Travels</button></a>
                        </li>
                        <li class="nav-item">
                            <a><button type="button" class="btn btn-primary" asp-area="" asp-controller="TravelBudget" asp-action="Index">History Travels</button></a>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TravelBudget - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
