@using Microsoft.AspNetCore.Identity
@model TravelBudget.ViewModels.TravelViewModel
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="container-create">
    <form method="post">
        @Html.AntiForgeryToken()
        <div>
            <h1 id="CreateTitle">@(Model.Travel.Name == null ? "Create Travel" : "Update Travel")</h1>
        </div>
        <input asp-for="@Model.Travel.UserId" value="@UserManager.GetUserAsync(User).Result.Id" hidden />
        <div class="form-outline mb-2" id="C_label_0" hidden>
            <input asp-for="@Model.Travel.Id" class=form-control autocomplete="off" />
        </div>
        <div class="form-outline mb-2" id="C_label_1-name">
            <label asp-for="@Model.Travel.Name" style="font-size:20px"></label>
            <input asp-for="@Model.Travel.Name" class=form-control-name autocomplete="off" placeholder="Type name of your travel" required />
        </div>
        <div class="form-outline mb-2" id="C_label_2-description">
            <label asp-for="@Model.Travel.Description" style="font-size:20px"></label>
            <input asp-for="@Model.Travel.Description" class=form-control-description autocomplete="off" placeholder="What is your travel about?" />
        </div>
        <div class="form-outline mb-2" id="C_label_3-startDate">
            <label asp-for="@Model.Travel.StartingDate" style="font-size:20px"></label>
            <div class="input-group date" style="z-index:0;">
                <input asp-for="@Model.Travel.StartingDate" class="form-control" type="datetime-local" id="startingDatePicker" />
                <div class="input-group-append">
                    <button type="button" class="btn btn-primary" id="showStartingDatePicker">Select</button>
                </div>
            </div>
            <span asp-validation-for="@Model.Travel.StartingDate" class="text-danger"></span>
        </div>

        <div class="form-outline mb-2" id="C_label_4-finishDate">
            <label asp-for="@Model.Travel.FinishDate" style="font-size: 20px"></label>
            <div class="input-group date" style="z-index:0;">
                <input asp-for="@Model.Travel.FinishDate" class="form-control" type="datetime-local" id="finishDatePicker" />
                <div class="input-group-append">
                    <button type="button" class="btn btn-primary" id="showFinishDatePicker">Select</button>
                </div>
            </div>
            <span asp-validation-for="@Model.Travel.FinishDate" class="text-danger"></span>
        </div>
        <div class="form-outline mb-2" id="C_label_5-multiDropUp">
            <select asp-for="SelectedCountries" class="form-control" multiple="multiple" id="example-dropUp">
                @foreach (var country in Model.CountriesSelectList)
                {
                    <option value="@country.Value">@country.Text</option>
                }
            </select>
        </div>
        <div class="form-outline mb-2" id="C_label_6-activeBox">
            <input asp-for="@Model.Travel.Active" class="form-check-input custom-button" type="checkbox" id="activeCheckbox">
            <label asp-for="@Model.Travel.Active" class="form-check-label custom-label" for="activeCheckbox" style="font-size: 23px"
                   title="Mark checkbox to add travel to your pending travels, otherwise it will be added to Travels History section">Active</label>
        </div>
        <li class="create-buttonSection"><button id="create-button" type="submit" class="btn btn-warning btn-lg"> @(Model.Travel.Name == null ? "Create" : "Update")</button></li>
    </form>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/js/bootstrap-multiselect.js" integrity="sha512-YwbKCcfMdqB6NYfdzp1NtNcopsG84SxP8Wxk0FgUyTvgtQe0tQRRnnFOwK3xfnZ2XYls+rCfBrD0L2EqmSD2sA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/css/bootstrap-multiselect.css" integrity="sha512-tlP4yGOtHdxdeW9/VptIsVMLtgnObNNr07KlHzK4B5zVUuzJ+9KrF86B/a7PJnzxEggPAMzoV/eOipZd8wWpag==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<script type="text/javascript">
    $(document).ready(function () {
        $('#example-dropUp').multiselect({
            buttonText: function (options, select) {
                if (options.length === 0) {
                    return '--Select Country--';
                }
                else if (options.length > 5) {
                    return 'More than 5 options selected!';
                }
                else {
                    var labels = [];
                    options.each(function () {
                        if ($(this).attr('label') !== undefined) {
                            labels.push($(this).attr('label'));
                        }
                        else {
                            labels.push($(this).html());
                        }
                    });
                    return labels.join(', ') + '';
                }
            },
            enableFiltering: true,
            includeSelectAllOption: true,
            maxHeight: 400,
            dropUp: true,
        });
    });
</script>

