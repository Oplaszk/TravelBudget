@model TravelBudget.Models.TravelViewModel

@{
    Layout = "~/Views/Travel/_Layout-TravelsHistory.cshtml";
}

<br>
<div id="container">
    @foreach (var item in Model.Travels)
    {
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>StartingDate</th>
                <th>FinishDate</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        <tr>
            <td>@item.Id</td>
            <td>@item.StartingDate</td>
            <td>@item.FinishDate</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
        </tr>
        </tbody>
    </table>
            <div id="button-containerAdd">
                <a href="#" data-record-id="@item.Id"><span class="MenuButton">Detail</span></a>
                <a href="#" data-record-id="@item.Id"><span class="MenuButton">Add Expense</span></a>
                <a data-record-id="@item.Id" asp-controller="Travel" asp-action="Edit" asp-route-id="@item.Id"><span class="MenuButton">Edit</span></a>
            </div>
    }

 </div>

 

