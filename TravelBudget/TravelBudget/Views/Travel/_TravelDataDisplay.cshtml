@using TravelBudget.ViewModels
@model Travel

<table id="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>StartingDate</th>
            <th>FinishDate</th>
            <th>Name</th>
            <th>Description</th>
            <th>Countries</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@string.Format("{0:yyyy-MM-dd} | {0:HH:mm}", @Model.StartingDate)</td>
            <td>@string.Format("{0:yyyy-MM-dd} | {0:HH:mm}", @Model.FinishDate)</td>
            <td>@Model.Name</td>
            <td>@Model.Description</td>
            <td>
                @foreach (var item in Model.Countries)
                {
                    <span>@item.Code</span><span>,</span>
                }
            </td>
        </tr>
    </tbody>
</table>
