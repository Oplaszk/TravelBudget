@model TravelBudget.Models.TravelViewModel

    <h1 id="title">Pending Travels</h1>
    <div id="container">
    @foreach (var item in Model.Travels)
    {
        <div class ="record-container">
            <table id="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>StartingDate</th>
                        <th>FinishDate</th>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.StartingDate</td>
                        <td>@item.FinishDate</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                    </tr> 
                </tbody>
            </table>
            <div id="button-containerAdd">
                <a href="#" data-record-id="@item.Id"><span class="MenuButton">Detail</span></a>
                <a href="#" data-record-id="@item.Id"><span class="MenuButton">Add Expense</span></a>
                <a data-record-id="@item.Id" asp-controller="Travel" asp-action="Update" asp-route-id="@item.Id"><span class="MenuButton">Update</span></a>
                <a data-record-id="@item.Id" asp-controller="Travel" asp-action="End" asp-route-id="@item.Id"><span class="MenuButton">End</span></a>
            </div>
        </div>
    }
    </div>

