@model TravelBudget.Models.ExpenseViewModel

@{
    Layout = "~/Views/Shared/_Layout-TravelsDetails.cshtml";
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/TravelsDetails-View.css" asp-append-version="true" />

<br>
<div id="container">
    @foreach (var item in Model.Expenses)
    {
        <div class="record-container">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Travel</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Country</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.TravelId</td>
                        <td>@item.Description</td>
                        <td>@item.Price</td>
                        <td>@item.Date</td>
                        <td>@item.CategoryId</td>
                        <td>@item.CountryId</td>
                    </tr>
                </tbody>
            </table>
            <div id="button-containerAdd">
                <a data-record-id="@item.Id" asp-controller="Expense" asp-action="Update" asp-route-id="@item.Id">
                    <span class="MenuButton">Update</span></a>
                <a data-record-id-delete="@item.Id" asp-controller="Expense" asp-action="Delete" asp-route-id="@item.Id"
                    onclick="return confirm('Are you sure that you want to delete this expense? Type OK/Cancel to continue');">
                    <span class="MenuButton">Delete</span></a>               
            </div>
        </div>
    }
</div>

